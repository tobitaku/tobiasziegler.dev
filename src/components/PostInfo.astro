---
import iconImage from '../assets/icon.webp';

interface Props {
  author: string;
  formattedDate: string;
}

const { author, formattedDate } = Astro.props;
---

<div class="flex flex-row space-x-4 items-center">
  <img
    class="rounded-full"
    width="32"
    height="32"
    src={iconImage.src}
    alt="Tobias Ziegler Icon"
  />
  <div class="text-sm">
    <p class="font-semibold">{author}</p>
    <p class="text-zinc-400">{formattedDate}</p>
  </div>
</div>
