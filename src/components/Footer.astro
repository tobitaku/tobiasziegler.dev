---
import type { Route } from '../types/Route';
import NavList from './NavList.astro';

const routes: Route[] = [
  {
    href: 'mailto:me@tobiasziegler.dev',
    name: 'me@tobiasziegler.dev',
    tab: true,
  },
  {
    href: 'https://github.com/tobitaku',
    name: 'GitHub',
    tab: true,
  },
  {
    href: 'https://www.linkedin.com/in/tobias-c-ziegler/',
    name: 'LinkedIn',
    tab: true,
  },
  { href: '/impressum', name: 'Impressum', tab: false },
  { href: '/datenschutz', name: 'Datenschutz', tab: false },
];
---

<footer class="font-light text-sm text-white">
  <hr class="mb-4" />
  <nav class="flex flex-col flex-wrap space-y-2">
    {
      routes.map((route) => (
        <a
          class="underline w-fit"
          href={route.href}
          target={route.tab ? '_blank' : '_self'}
        >
          {route.name}
        </a>
      ))
    }
  </nav>
</footer>
