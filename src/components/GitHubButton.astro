---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<a
  href="https://github.com/tobitaku"
  target="_blank"
  class="bg-zinc-950 border border-zinc-800 text-white leading-6 px-4 py-3 rounded-lg font-semibold text-sm w-fit transition ease-in-out delay-150 hover:-translate-y-1 hover:bg-zinc-800 duration-300 motion-reduce:transition-none"
  >{content}
</a>
