---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<a
  href="https://github.com/tobitaku"
  target="_blank"
  class="bg-transparent text-white border border-slate-400 leading-6 px-4 py-3 rounded-lg font-semibold text-sm w-fit hover:border-white transition ease-in-out delay-150 hover:-translate-y-1 duration-300 motion-reduce:transition-none"
  >{content}
</a>
