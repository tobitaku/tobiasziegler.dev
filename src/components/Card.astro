---
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  imageAlt: string;
  link: string;
  blur?: boolean;
}

const { title, description, image, imageAlt, link, blur } = Astro.props;
---

<a
  class="shadow-lg tracking-tight p-5 text-black rounded-2xl md:w-5/12 md:max-w-sm"
  href={link}
  target="_blank"
>
  <div class="flex h-full flex-col justify-between space-y-4">
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="">{description}</p>
    <img
      class={`rounded-2xl ${blur ? 'blur-2xl' : ''}`}
      src={image.src}
      width="100%"
      height={50}
      alt={imageAlt}
    />
  </div>
</a>
