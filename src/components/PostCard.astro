---
import { getFormattedDate } from '../shared/util';

interface Props {
  author: string;
  title: string;
  date: Date;
  href: string;
}

const { title, date, href } = Astro.props;
const formattedDate = getFormattedDate(date);
---

<a
  class="bg-zinc-800 flex flex-col space-y-2 text-sm cursor-pointer rounded-lg p-4 transition ease-in-out delay-150 hover:-translate-y-1 duration-300 motion-reduce:transition-none"
  href={href}
>
  <h3 class="font-semibold tracking-wide">{title}</h3>
  <p class="text-sm text-zinc-400">
    {formattedDate}
    <span class="text-white">â†’</span>
  </p>
</a>
